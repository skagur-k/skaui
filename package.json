{
	"name": "skaui",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"docs": "turbo run dev --filter=docs",
		"web": "turbo run dev --filter=web",
		"build:docs": "turbo run build --filter=docs",
		"build:web": "turbo run build --filter=web",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"new": "plop && pnpm install",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@changesets/cli": "^2.24.1",
		"@skaui/twplugin": "workspace:^1.0.0",
		"@types/node": "^18.6.1",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"clsx": "^1.2.1",
		"eslint-config-skaui": "workspace:*",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"plop": "^3.1.1",
		"prettier": "latest",
		"tailwindcss": "^3.1.6",
		"turbo": "latest"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"package/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"*.json": [
			"prettier --write"
		]
	},
	"packageManager": "pnpm@7.6.0"
}
